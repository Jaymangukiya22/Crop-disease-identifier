<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:fillViewport="true"
    tools:context=".DetectionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Small Plant Icon -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_plant_logo"
                android:layout_marginBottom="16dp"
                android:contentDescription="Plant icon" />

            <TextView
                android:id="@+id/tv_detection_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detection_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.05" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload or capture a plant leaf image"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

        <!-- Action Buttons Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/background_light"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/ll_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center">

                <!-- Capture Image Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_capture_image"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="@string/capture_image"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    app:cornerRadius="28dp"
                    android:elevation="0dp"
                    app:icon="@android:drawable/ic_menu_camera"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@color/white" />

                <!-- Upload Image Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_upload_image"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/upload_image"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/secondary"
                    android:textColor="@color/white"
                    app:cornerRadius="28dp"
                    android:elevation="0dp"
                    app:icon="@android:drawable/ic_menu_gallery"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Image Display Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/background_white"
            app:strokeWidth="2dp"
            app:strokeColor="@color/background_light"
            app:layout_constraintTop_toBottomOf="@id/card_actions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Image View Container -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/background_light">

                    <ImageView
                        android:id="@+id/iv_plant_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/select_image_first" />

                </androidx.cardview.widget.CardView>

                <!-- Model Status Indicator -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="8dp"
                    android:background="@drawable/info_item_background">
                    
                    <TextView
                        android:id="@+id/tv_model_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”„ Initializing Model..."
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium" />
                        
                </LinearLayout>

                <!-- Image Status Text -->
                <TextView
                    android:id="@+id/tv_image_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_image_first"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Disease Information Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_disease_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/background_white"
            app:strokeWidth="2dp"
            app:strokeColor="@color/background_light"
            app:layout_constraintTop_toBottomOf="@id/card_image_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="@color/primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analysis Results"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-light"
                        android:letterSpacing="0.05" />

                </LinearLayout>

                <!-- Disease Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/info_item_background"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disease_name"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tv_disease_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_disease"
                        android:textSize="20sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

                <!-- Debug Info (Top Predictions) -->
                <LinearLayout
                    android:id="@+id/ll_debug_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/info_item_background"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ” MODEL DEBUG INFO"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tv_debug_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top predictions will appear here..."
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:fontFamily="monospace"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

                <!-- Cause -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/info_item_background"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cause"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tv_cause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_cause"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-light"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

                <!-- Prevention -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/info_item_background"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prevention"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tv_prevention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_prevention"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-light"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView> 